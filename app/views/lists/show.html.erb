<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h3><%= @list.title %>
			<%= link_to "Delete", @list, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
			<%= link_to "Edit", edit_list_path, class: "btn btn-xs btn-warning" %>
			</h3>
			<p><%= @list.description %></p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= render 'lists/list_item_form' %>
			<%= @list.list_items.each do |item| %>
				<%= item.title %>
			<% end %>
		</div>
	</div>
</div>